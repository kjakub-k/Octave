:root {
    font-size: 329%;
    -unity-font-style: bold;
    color: rgb(255, 255, 255);
    -unity-text-align: upper-right;
    -unity-text-outline-width: 3px;
    -unity-text-outline-color: rgb(0, 0, 0);
}

#Background {
    flex-direction: row;
}

#Top {
    flex-grow: 1;
    flex-basis: 50%;
    -unity-text-align: upper-center;
}

#Bottom {
    flex-direction: column;
    flex-grow: 1;
    flex-basis: 50%;
    align-items: center;
}

#Score {
}

#HighestCombo {
    -unity-text-outline-width: 0;
    color: rgb(170, 170, 170);
    font-size: 22px;
    margin-top: 0;
    margin-right: 0;
    margin-left: 0;
    padding-top: 0;
    padding-right: 0;
    padding-left: 0;
    transition-property: opacity;
    transition-duration: 0.4s;
    transition-timing-function: ease-in;
}

#HighestCombo.hidden {
    opacity: 0;
    transition-property: opacity;
    transition-duration: 0.4s;
    transition-timing-function: ease-in;
}

#Accuracy {
    margin-bottom: 67px;
    font-size: 51px;
    transition-property: translate, opacity;
    transition-duration: 0.5s, 0.1s;
    transition-timing-function: ease-out-bounce, ease-in;
    opacity: 0;
    translate: 0 0;
}

#Accuracy.show {
    opacity: 1;
    translate: 0 -20px;
}

#Accuracy.hidden {
    opacity: 0;
    translate: 0 0;
    transition-duration: 0.2s;
    transition-timing-function: ease-in;
}

#ColumnMiddle {
    align-items: center;
    flex-basis: 10%;
}

#Column {
    align-items: center;
    justify-content: center;
    flex-basis: 45%;
}

#Thermostat {
    width: 44%;
    height: 60%;
    position: absolute;
}
